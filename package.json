{
    "name": "lerna-test-v1",
    "private": true,
    "version": "0.0.0",
    "description": "Tools and constants shared across Apify projects.",
    "main": "build/index.js",
    "types": "types/index.d.ts",
    "keywords": [
        "apify"
    ],
    "author": {
        "name": "Apify",
        "email": "support@apify.com",
        "url": "https://apify.com"
    },
    "contributors": [
        "Jan Curn <jan@apify.com>",
        "Marek Trunk√°t <marek@apify.com>"
    ],
    "license": "Apache-2.0",
    "workspaces": [
        "packages/*"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/apify/apify-shared-js"
    },
    "bugs": {
        "url": "https://github.com/apify/apify-shared-js/issues"
    },
    "homepage": "https://apify.com",
    "scripts": {
        "clean": "lerna run clean",
        "build": "lerna run build",
        "test": "jest --silent",
        "test-cov": "jest --coverage",
        "release": "npm run build && lerna version patch && lerna publish from-package --contents dist",
        "release:next": "npm run build && lerna publish --canary --preid dev --dist-tag next",
        "lint": "eslint packages/*/src test",
        "lint:fix": "eslint packages/*/src test --fix"
    },
    "jest": {
        "testTimeout": 30000,
        "preset": "ts-jest",
        "testEnvironment": "node",
        "collectCoverage": false,
        "collectCoverageFrom": [
            "<rootDir>/packages/*/src/**/*.ts"
        ],
        "moduleNameMapper": {
            "@lerna-test-v1/(.*)": "<rootDir>/packages/$1/src"
        },
        "modulePathIgnorePatterns": [
            "dist/package.json",
            "<rootDir>/package.json"
        ],
        "globals": {
            "ts-jest": {
                "tsconfig": "test/tsconfig.json"
            }
        }
    },
    "devDependencies": {
        "@apify/eslint-config": "^0.1.4",
        "@apify/eslint-config-ts": "^0.1.1",
        "@types/git-url-parse": "^9.0.0",
        "@types/jest": "^26.0.23",
        "@types/marked": "^2.0.2",
        "@types/node": "^14.14.41",
        "@types/request": "^2.48.5",
        "@types/underscore": "^1.11.2",
        "@typescript-eslint/eslint-plugin": "^4.22.1",
        "@typescript-eslint/parser": "^4.22.1",
        "deploy-web-to-s3": "^1.3.0",
        "eslint": "^7.25.0",
        "gen-esm-wrapper": "^1.1.1",
        "jest": "^26.6.3",
        "lerna": "^4.0.0",
        "marked": "^2.0.3",
        "nock": "^13.0.7",
        "strip-ansi": "^6.0.0",
        "ts-jest": "^26.5.5",
        "ts-node": "^9.1.1",
        "typescript": "^4.2.4",
        "underscore": "^1.13.1"
    }
}
