{
    "packages": [
        "packages/*"
    ],
    "version": "1.0.22",
    "command": {
        "version": {
            "conventionalCommits": true,
            "granularPathspec": false,
            "createRelease": "github",
            "message": "chore(release): %s [skip ci]"
        }
    },
    "useWorkspaces": true,
    "ignoreChanges": [
        "**/test/**",
        "**/*.md"
    ]
}
